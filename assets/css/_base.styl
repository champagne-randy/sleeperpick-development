// set color pallette
primary					= #FFF
secondary				= #333333
accent					= #E7BF1F
shadow					= rgba(0, 0, 0, 0.5)


// set viewport dimensions for responsiveness
vHeight					= 1200px
vWidth					= 2408px



// make bootstrap container fill viewport
.container-fluid, .row, .col-sm-12, .col-xs-12
	padding 			0
	margin 				0
	

// set global typography
// BebasNeueBold
@font-face{
    font-family 		"BebasNeueBold"
    src 				url('../fonts/BebasNeue-Bold.ttf') format('truetype'), url('../fonts/BebasNeue-Bold.otf') format('truetype')
}

// BebasNeueRegular
@font-face{
    font-family 		"BebasNeueRegular"
    src 				url('../fonts/BebasNeue-Regular.otf') format('truetype')
}

// Centuma
@font-face{
    font-family 		"Centuma"
    src 				url('../fonts/Centuma-Regular.otf') format('truetype')
}

// CentumaBold
@font-face{
    font-family 		"CentumaBold"
    src 				url('../fonts/Centuma-Bold.otf') format('truetype')
}				


body
	//font-family 		.HelveticaNeueDeskInterface-Regular
	font-size 			14px
	


// section separator
.separator
	display				block
	background			rgba(0, 0, 0, 1) url('../img/separator.svg')
	width				100%
	height				20px
	

