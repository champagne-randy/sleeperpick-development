extends ./base/_layout

block theContent

	.container-fluid
		
		//-
			ToDo
				turn this into a BS nav bar


		// section.top
		section.top

			// navigation
			include ./includes/_navigation
			// end navigation


			// marketing
			section
				.row
					.col-sm-5.col-sm-offset-1
						.marketing
							p.
								Fantasy the way sports are really played
							p.
								Create tournaments. Pick teams. Dominate friends. 
							p.
								SleeperPick let’s you create daily pick’em pools. Points are awarded for underdogs.Get in the game!
					.hidden-xs.col-sm-5
						img.mobile-mock(src="img/mobile-mock-sliced.png")
			// end marketing
		// end section.top


		// separator
		.row
			.col-sm-12
				.separator
		// end separator



		// section.bottom
		section.bottom
			
			// header
			header
				.row
					.col-sm-2.col-sm-offset-5.text-center.
						HOW IT WORKS


			// body
			section#cards

				// arrow-black-down
				.row
					//- MD + views
					.hidden-xs.hidden-sm.col-md-2.col-md-offset-7
						#arrow-down
							img(src="img/arrow-black-down.png")
				

				// cards
				.row
					// card 1
					//- XS & SM views
					.col-xs-10.col-xs-offset-1.hidden-md.hidden-lg
						.card

					//- MD + views
					.hidden-xs.hidden-sm.col-md-3.col-md-offset-1
						.card


					// arrow-black-right
					//- SM view
					.hidden-xs.col-sm-1.col-sm-offset-2.hidden-md.hidden-lg
						#arrow-right
							img(src="img/arrow-black-up.png")


					// card 2
					//- XS & SM view
					.col-xs-10.col-xs-offset-1.hidden-md.hidden-lg
						.card

					//- MD + views
					.hidden-xs.hidden-sm.col-md-4
						.row
							.col-md-12
								.row
									.col-md-10.col-md-offset-1
										.card


					// arrow-black-left
					//- SM view
					.hidden-xs.col-sm-1.col-sm-offset-8.hidden-md.hidden-lg
						#arrow-left
							img(src="img/arrow-black-down.png")


					// card 3
					//- XS & SM views
					.col-xs-10.col-xs-offset-1.hidden-md.hidden-lg
						.card

					//- MD + views
					.hidden-xs.hidden-sm.col-md-3
						.card




				// arrot-black-up
				.row
					.hidden-xs.hidden-sm.col-md-2.col-md-offset-3
						#arrow-up
							img(src="img/arrow-black-up.png")

			
			// header 2
			header#scoring
				
				.row
					.col-sm-2.col-sm-offset-5.text-center.
						SCORING

			// section 2
			section
				// panel
				.row
					.col-sm-10.col-sm-offset-1
						#pannel




		// end section.bottom


		// separator
		.row
			.col-sm-12
				.separator
		// end separator

		






	

















